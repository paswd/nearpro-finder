<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/itemPropertyListViewImage"
        android:layout_width="82dp"
        android:layout_height="82dp"
        android:src="@drawable/tmp_icon"/>
    <LinearLayout
        android:id="@+id/itemPropertyListViewTextLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/itemPropertyListViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заголовок"
            android:textStyle="bold"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/itemPropertyListViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="г. Москва, Волоколамское-Какое-нибудь-ещё ш., 32"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/itemPropertyListViewPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 000 000 ₽"
            android:textStyle="italic"

            />
    </LinearLayout>
</LinearLayout>